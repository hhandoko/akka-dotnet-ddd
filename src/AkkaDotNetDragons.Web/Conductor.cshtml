@inherits ViewPage
@section BodyClass { class="conductor" }

<div id="wrap">
    <div class="container">
        <div class="row system">
            <div class="col-xs-12">
                <div id="reset-ctr"></div>
            </div>
        </div>
        <div class="row content">
            <div class="col-xs-12">
                <div id="action-ctr"></div>
            </div>
        </div>
    </div>
</div>

<div id="footer" class="footer">
    <div class="container">
        <div class="row statuses">
            <div class="col-xs-3">
                <button id="status-ready" class="btn btn-fab btn-fab-mini"><i class="fa fa-server"></i> <span class="sr-only">Ready</span></button>
            </div>
            <div class="col-xs-3">
                <button id="status-registering" class="btn btn-fab btn-fab-mini"><i class="fa fa-exchange"></i> <span class="sr-only">Registering</span></button>
            </div>
            <div class="col-xs-3">
                <button id="status-active" class="btn btn-fab btn-fab-mini"><i class="fa fa-bolt"></i> <span class="sr-only">Active</span></button>
            </div>
            <div class="col-xs-3">
                <button id="status-finished" class="btn btn-fab btn-fab-mini"><i class="fa fa-trophy"></i> <span class="sr-only">Finished</span></button>
            </div>
        </div>
        <div class="row title">
            <div class="col-xs-12">
                <object type="image/svg+xml" data="~/static/img/logo.svg" alt="Akka.NET Dragons Demo logo" class="logo">Dragon</object>
                <h1>Akka.NET Dragons | Conductor</h1>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/static/lib/requirejs/require.min.js" type="text/javascript" data-main="static/js/conductor.min"></script>