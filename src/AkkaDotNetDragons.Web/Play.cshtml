@inherits ViewPage
@section BodyClass { class="player" }

<div id="wrap">
    <div class="container">
        <div class="row system">
            <div class="col-xs-12">
                <div id="stats-ctr"></div>
            </div>
        </div>
        <div class="row content">
            <div class="col-xs-12">
                <div id="environment"></div>
                <div class="result"></div>
                <div id="action-ctr"></div>
            </div>
        </div>
    </div>
</div>

<div id="footer" class="footer">
    <div class="container">
        <div class="row title init">
            <div class="col-xs-12">
                <object type="image/svg+xml" data="~/static/img/logo.svg" alt="Akka.NET Dragons Demo logo" class="logo">Dragon</object>
                <h1>Akka.NET <span>Dragons | Play</span></h1>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/static/lib/requirejs/require.min.js" type="text/javascript" data-main="static/js/player.min"></script>